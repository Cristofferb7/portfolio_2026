---
import Base from '@/templates/Base.astro';
import { AppConfig } from '@/utils/AppConfig';

const { title } = AppConfig;
---

<Base head={{ title: `Resume | ${title}`, description: 'Professional Resume of Cristoffer Bohorquez' }}>
  <div className="flex flex-col items-center py-10">
    <div className="w-full max-w-5xl px-4" style={{ height: '90vh' }}>
      <iframe
        src="/resume_harvard_software_final.pdf"
        width="100%"
        height="100%"
        className="rounded-lg border-2 border-gray-800 shadow-2xl"
      >
        <p>Your browser does not support iframes. 
          <a href="/resume_harvard_software_final.pdf">Download the PDF instead.</a>
        </p>
      </iframe>
    </div>
  </div>
</Base>